<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4285F4"/> <!-- Google Blue -->
            <corners android:radius="12dp"/>
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/>
            <stroke android:width="1dp" android:color="#3367D6"/>
            <gradient
                android:startColor="#4285F4"
                android:endColor="#3367D6"
                android:angle="270" />
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="#3367D6"/>
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>
</ripple>
